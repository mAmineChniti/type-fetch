{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["dist", "node_modules"],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"ignore": ["dist", "node_modules", "tests"],
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off"
			}
		}
	}
}
